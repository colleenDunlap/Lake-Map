extends layout

block content
  .page-header
    h3 Post Your Event!

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    //Event name
    .form-group
      label(class='col-sm-2 control-label', for='name') Event
      .col-sm-8
        input.form-control(type='text', name='name', id='name', autofocus=true)
    //latitude value
    .form-group
      label(class='col-sm-2 control-label', for='location') Latitude
      .col-sm-8
        input.form-control(type='number', step = 'any', name='latitude', id='latitude')
    //Longitude value
    .form-group
      label(class='col-sm-2 control-label', for='location') Longitude
      .col-sm-8
        input.form-control(type='number', step = 'any', name='longitude', id='longitude')
    //description
    .form-group
      label(class='col-sm-2 control-label', for='message') Description
      .col-sm-8
        textarea.form-control(name='message', id='message', rows='7')
    //post button
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit') Post!
